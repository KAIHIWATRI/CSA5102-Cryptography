#include <stdio.h>
#include <string.h>
#include <ctype.h>

void monoSubCipher(char text[], char key[]) {
    for (int i = 0; text[i] != '\0'; i++) {
        char ch = text[i];

        if (isupper(ch)) {
            text[i] = toupper(key[ch - 'A']); // Map uppercase
        } else if (islower(ch)) {
            text[i] = tolower(key[ch - 'a']); // Map lowercase
        }
        // Non-alphabetic characters remain unchanged
    }
}

int main() {
    char text[100];
    char key[27]; // 26 letters + null terminator

    printf("Enter text to encrypt: ");
    fgets(text, sizeof(text), stdin);
    text[strcspn(text, "\n")] = 0; // Remove newline

    printf("Enter 26-letter key (e.g., QWERTYUIOPASDFGHJKLZXCVBNM): ");
    scanf("%26s", key);

    monoSubCipher(text, key);
    printf("Encrypted text: %s\n", text);

    return 0;
}
