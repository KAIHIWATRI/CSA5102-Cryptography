#include <stdio.h>
#include <string.h>
#include <ctype.h>

void polySubCipher(char text[], char key[]) {
    int keyLen = strlen(key), j = 0;
    for (int i = 0; text[i] != '\0'; i++) {
        char ch = text[i];
        if (isalpha(ch)) {
            int k = toupper(key[j % keyLen]) - 'A';
            if (isupper(ch)) text[i] = ((ch - 'A' + k) % 26) + 'A';
            else text[i] = ((ch - 'a' + k) % 26) + 'a';
            j++;
        }
    }
}

int main() {
    char text[100], key[100];

    printf("Enter text to encrypt: ");
    fgets(text, sizeof(text), stdin);

    printf("Enter key: ");
    scanf("%s", key);

    polySubCipher(text, key);
    printf("Encrypted text: %s\n", text);

    return 0;
}
